# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
#bindsym $sup+d exec --no-startup-id i3-dmenu-desktop

# rofi
bindsym $sup+d          exec rofi -show drun
bindsym $sup+Shift+d    exec rofi -show run
bindsym $alt+w          exec rofi -show window
bindsym $alt+s          exec rofi -show ssh
bindsym $sup+x          exec ~/dotfiles/Scripts/xpanda
bindsym $sup+Shift+x    exec ~/dotfiles/Scripts/xpanda -c
bindsym $alt+x          exec ~/dotfiles/Scripts/xpanda -d
bindsym $alt+Shift+x          exec ~/dotfiles/Scripts/xpands -D
